<div class="row justify-content-center">
    <div class="col-md-7 col-lg-6">
            <div class="card shadow-sm p-4">
                    <h3 class="mb-3 text-center">Create New Listing</h3>

                        <form action="/listings" method="POST" enctype="multipart/form-data">

                            <div class="mb-3">
                                <label class="form-label">Title</label>
                                <input type="text" name="listing[title]" class="form-control" required>
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Description</label>
                                <textarea name="listing[description]" class="form-control" required></textarea>
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Price</label>
                                <input type="number" name="listing[price]" class="form-control">
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Location</label>
                                <input type="text"
                                    name="listing[location]"
                                    class="form-control"
                                    placeholder="City, Country"
                                    required>
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Country</label>
                                <input type="text" name="listing[country]" class="form-control">
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Upload Images</label>
                                <input type="text"
                                    name="listing[image][url]"
                                    class="form-control"
                                    placeholder="Paste image link">
                                <input type="file" name="images" multiple class="form-control">
                            </div>

                            <button class="btn btn-dark">Create</button>

                        </form>
                    </div>
            </div>
        </div>
    </div>
</div>
