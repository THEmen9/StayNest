<h1>Create New Listing</h1>

<form action="/listings" method="POST" enctype="multipart/form-data">

    <label>Title</label>
    <input type="text" name="listing[title]" required />

    <br><br>

    <label>Image URL</label>
    <input type="text" name="listing[image][url]" placeholder="Paste image link">

    <br><br>

    <label>Upload Photo</label>
    <input type="file" name="imageFile">

    <br><br>
    
    <label>Description</label>
    <textarea name="listing[description]" required></textarea>

    <br><br>

    <label>Price</label>
    <input type="number" name="listing[price]" />

    <br><br>

    <label>Location</label>
    <input type="text" name="listing[location]" />

    <br><br>

    <label>Country</label>
    <input type="text" name="listing[country]" />

    <br><br>

    <button type="submit">Create</button>

</form>
