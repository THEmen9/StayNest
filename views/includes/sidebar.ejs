
<div class="sidebar" id="sidebar">
  <div class="sidebar-inner">

    <!-- Desktop-only: collapse toggle. Hidden on mobile via CSS. -->
    <div class="sidebar-toggle">
      <button id="toggleSidebar" title="Collapse sidebar">
        <i class="bi bi-layout-sidebar" id="toggleIcon"></i>
      </button>
    </div>

    <p class="sidebar-title">Explore</p>

    <a href="/listings"
       data-tooltip="Home"
       class="sidebar-link <%= currPath === '/listings' ? 'active' : '' %>">
      <i class="bi bi-house-door"></i>
      <span class="link-text">Home</span>
    </a>

    <a href="/my-bookings"
       data-tooltip="My Bookings"
       class="sidebar-link <%= currPath === '/my-bookings' ? 'active' : '' %>">
      <i class="bi bi-calendar-check"></i>
      <span class="link-text">My Bookings</span>
    </a>

    <a href="/listings/new"
       data-tooltip="Add Stay"
       class="sidebar-link <%= currPath === '/listings/new' ? 'active' : '' %>">
      <i class="bi bi-plus-circle"></i>
      <span class="link-text">Add Stay</span>
    </a>

    <a href="/listings"
       data-tooltip="Booking"
       class="sidebar-link disabled">
      <i class="bi bi-calendar3"></i>
      <span class="link-text">Booking</span>
    </a>

    <a href="#"
       data-tooltip="Bathroom Rent"
       class="sidebar-link disabled">
      <i class="bi bi-droplet"></i>
      <span class="link-text">Bathroom Rent</span>
    </a>

  </div>
</div>